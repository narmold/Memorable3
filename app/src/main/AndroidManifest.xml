<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sourcey.materiallogindemo" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Dark" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".SignupActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".GeneratorActivity"
            android:label="@string/title_activity_generator"
            android:theme="@style/AppTheme.Dark" >
        </activity>
        <activity
            android:name=".PasswordBankActivity"
            android:label="Password Bank" >
        </activity>
        <activity
            android:name=".CheckerActivity"
            android:theme="@style/AppTheme.Dark"
            android:label="Checker" >
        </activity>
        <activity
            android:name=".Home"
            android:label="Home"
            android:theme="@style/AppTheme.Dark" >
        </activity>
        <activity
            android:name=".NewEntry"
            android:label="New Entry"
            android:theme="@style/AppTheme.Dark" >
        </activity>
        <activity
            android:name=".EditEntry"
            android:label="Edit Entry"
            android:theme="@style/AppTheme.Dark" >
        </activity>
    </application>

</manifest>
